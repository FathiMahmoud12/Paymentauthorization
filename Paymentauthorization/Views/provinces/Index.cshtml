@model IEnumerable<Paymentauthorization.Models.Province>

@using (Html.BeginForm("Index", "provinces", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="card">
        <div class="card-header">
            <div class="row justify-content-between">
                <h4 class="col-auto">المحافظات </h4>
            </div>
        </div>
    </div>
    <div class="mb-3">
        <label for="username" class="form-label"> إسم المحافظة : </label>
        <input type="text" class="form-control" id="ProvincesNAme" name="ProvincesNAme" placeholder="المحافظة" required>
        <div class="invalid-feedback">
            أدخل اسم المحافظة
        </div>
    </div>



    <div class="mb-3" style="direction:ltr">
        <button class="btn btn-primary w-34 waves-effect waves-light" type="submit">تسجيل </button>
    </div>
}
<table class="table table-hover">
    <thead class="thead-dark ">
        <tr>
            <th>
                الاسم
            </th>
            <th style="margin-left:100px">
                عمليات
            </th>
        </tr>
    </thead>
    <br>
    <br>
    <hr>
    @foreach (var item in Model)
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProvincesNAme)
            </td>
            <td>
                @Html.ActionLink("تعديل", "Edit", new { id = item.id }) |
                @Html.ActionLink("عرض البيانات  ", "Details", new { id = item.id }) |
                @Html.ActionLink("حذف", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>
